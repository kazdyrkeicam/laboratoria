#include <stdio.h>

void f(const char* filename, const char *str){
  int count = 0;
  FILE *file;
  char c;
  
  if((file = fopen(filename, "r+t")) == NULL) //rt == read text
    printf("blad!");
    
  else {
  
    do{
      c = fgetc(file);
      if(c == '*'){
        count++;
        if(count == 5){
          
          fseek(file, -5, SEEK_CUR);
          fputs(str, file);
        }
      }else count = 0;
    } while(c != EOF);
    fclose(file);
  }
}


int main(){

  f("file.bin", "rybke");

  return 0;
}
