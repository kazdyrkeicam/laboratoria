//PPM wikipedia
#include <stdio.h>

int main(){
  const int dimx = 800;
  const int dimy = 800;
  
  FILE *image = fopen("obrazek.ppm", "wb");
  fprintf(image, "P6\n%d %d\n255\n", dimx, dimy);
  
  for(int j = 0; j < dimy; ++j){
    for(int i = 0; i < dimx; ++i){
      unsigned char colour[3];
      colour[0] = i % 255;
      colour[1] = j % 255;
      colour[2] = (i + j) % 255;
      
      fwrite(colour, 1, 3, image);
    }
  }
  fclose(image);
  return 0;
}
