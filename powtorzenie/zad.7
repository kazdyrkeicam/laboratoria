#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef enum {PIES, KOT} AnimalType;

typedef struct{
  char name[10];
  AnimalType type;
  void(*say_something)(int n);
} Animal;

void mial(int n){
  for(int i = 0; i < n; ++i)
    printf("mial\n");
}

void hau(int n){
  for(int i = 0; i < n; ++i)
    printf("hauu\n");
}

Animal create_animal_obj(AnimalType type, char *name){
  Animal animal;
  animal.type = type;
  for(int i = 0; i < 10; ++i)
    animal.name[i] = '\0';
  
  memcpy(animal.name, name, strlen(name));
  if(type == KOT)
    animal.say_something = mial;
  else if(type == KOT)
    animal.say_something = mial;
    
  return animal;
}
int main(){
  Animal kot = create_animal_obj(KOT, "Zbyszek");
  Animal pies = create_animal_obj(PIES, "Zbigniew");
  kot.say_something(5);
  printf("\n");
  pies.say_something(10);
  return 0;
}
