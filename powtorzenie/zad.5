#include <stdio.h>
#include <stdlib.h>

float **f(float *arr, int n, int m){
  float **result = malloc(sizeof(*result) * n);
  for(int i = 0; i < n; ++i)
    result[i] = malloc(sizeof(**result) * m);
    
  for(int i = 0; i < n; ++i)
    for(int j = 0; j < m; ++j)
      if(i == 0 || j == 0 || i == n - 1 || j == m - 1)
        result[i][j] = 0.f;
      else
        result[i][j] = arr[i * m + j];
  
  return result;
  
}


int main(){
  int n = 3, m = 5;
  float arr[15] = {1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f, 1.f};
  float **result = f(arr, n, m);
  
  for(int i = 0; i < n; ++i){
    for(int j = 0; j < m; ++j)
      printf("%f ", result[i][j]);
    printf("\n");
  }
  for(int i = 0; i < n; ++i)
    free(result[i]);
  free(result);
  return 0;
}
