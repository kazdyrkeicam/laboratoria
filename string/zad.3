/*Napisz funkcję w języku C, która przyjmie jako argument tablicę napisów.
Funkcja powinna utworzyć tablicę wskaźników na napisy i zapisać w niej wskaźniki na napisy z tablicy wejściowej,
tak aby były one zapisane w kolejności alfabetycznej./**/

#include <string.h>
#include <stdio.h>
#include <stdlib.h>

int strcmp_wrapper(const void *a, const	void *b){
  return strcmp(*(const char**)a, *(const char**)b);
}


int main(){
  char *arr[100] = {"tygrys syberyjski", "krokodyl nilowy", "panda wielka", "tygrys azjatycki", "chomik azjatycki"};
  int n	= 5;

  qsort(arr, 5, sizeof(*arr), strcmp_wrapper);
  for(int i = 0; i < n;	++i)
    printf("%s\n", arr[i]);



  return 0;
}

